{% extends 'base.html.twig' %}

{% block title %}VirtualVibes : Connexion{% endblock %}



{% block body %}


<div class="container-fluid blocklogin">
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6 ctlogin">
                <div class="row">
                    

                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                        
                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}
                        
                            <div class="col-md-12">
                                <div class="row align-items-center">
                                    <div class="col-lg-2">
                                        <img class="logo" src="{{asset('divers/images/logo.png')}}" alt="Logo VirtualVibes">
                                    </div>
                                    <div class="col-lg-5 col-md-12">
                                        <h4 class=" font-weight-normal">Connecte toi :</h4>
                                    </div>
                                    <div class="col-lg-5"></div>
                                </div>

                            </div>

                            <label class="mt-2" for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            <label class="mt-2" for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                   

                        <div class="col-md-12 mt-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <button class="btn btn-md btn-success" type="submit">
                                        Connexion
                                    </button>
                                </div>
                                <div class="col-lg-6">
                                    <div class="row align-items-center">
                                        <div class="col-md-6 text-danger">
                                            Pas Inscrit ?
                                        </div>
                                        <div class="col-md-6">
                                            <a class="btn btn-md btn-primary"href="{{path('app_register')}}">
                                                S'inscrire
                                            </a>
                                        </div>
                                    </div>
                                </div>       
                            </div>
                        </div>


                    
                    
                    
                    </form>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>






{% endblock %}
